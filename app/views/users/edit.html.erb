<!-- app/views/users/edit.html.erb -->
<h2>Edit user</h2>
<% if cookies.signed[:DivAdmin] %>
  <%= form_for @users, :url => { :action => "update" } do |f| %>
    <%= f.label "Name: " %>
    <%= f.text_field :name %><br />
    <%= f.label "Division: " %>
    <%= f.text_field :division %><br />
    <%= f.label "Department: " %>
    <%= f.text_field :department %><br />
    <%= f.label "Username: " %>
    <%= f.text_field :username %><br />
    <%= f.hidden_field :id %>
    <%= f.submit "Submit" %>
  <% end %>
<% end %>
